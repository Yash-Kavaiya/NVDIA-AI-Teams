{
  "name": "nvidia-retail-ai-agent",
  "version": "1.0.0",
  "description": "NVIDIA Retail AI Agent Team - ChatGPT-like interface for retail operations",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:ui\" \"npm run dev:agent\" --names \"ðŸŽ¨ UI\",\"ðŸ¤– Agent\" --prefix-colors cyan,green --kill-others",
    "dev:debug": "LOG_LEVEL=debug npm run dev",
    "dev:agent": "cd agent && .venv\\Scripts\\python.exe agent.py",
    "dev:ui": "next dev --turbopack",
    "build": "next build",
    "build:agent": "cd agent && pip install -r requirements.txt",
    "start": "next start",
    "start:all": "concurrently \"npm start\" \"cd agent && python agent.py\" --names ui,agent --prefix-colors blue,green",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "install:agent": "./scripts/setup-agent.sh || scripts\\setup-agent.bat",
    "postinstall": "npm run install:agent",
    "clean": "rm -rf .next node_modules agent/venv",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@ag-ui/client": "^0.0.40",
    "@copilotkit/react-core": "1.10.6",
    "@copilotkit/react-ui": "1.10.6",
    "@copilotkit/runtime": "1.10.6",
    "next": "15.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
